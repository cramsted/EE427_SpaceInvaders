#include "tank.h"

#define TANK_HEIGHT (8*2)
#define TANK_WIDTH (15*2)

extern const int tank_15x8[];

Tank initTank(int x, int y) {
	Tank t;
	t.lives = MAX_LIVES;
	t.p = initPosition(x, y);
	t.sp = initSprite(TANK_HEIGHT, TANK_WIDTH, GREEN, tank_15x8);
	return t;
}
