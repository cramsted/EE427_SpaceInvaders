#define FRAME_BUFFER_0_ADDR 0xC0000000  // Starting location in DDR where we will store the images that we display.
#define MAX_SILLY_TIMER 10000000;

int main() {
	init_platform(); // Necessary for all programs.
	init_videoDMAController(); //sets up video hardware

	// Just paint some large red, green, blue, and white squares in different
	// positions of the image for each frame in the buffer (framePointer0 and framePointer1).
	int row = 0, col = 0;
	for (row = 0; row < 480; row++) {
		for (col = 0; col < 640; col++) {
//			if (col >= 100 && col <= 163 && row >= 100 && row <= 131) {
			if (col >= 100 && col <= 131 && row >= 100 && row <= 115) {
				if(findPixelValue(100, 100, col, row, (int*)&topOutAlienSymbol)){
					 framePointer0[row*640 + col] = 0x00FFFFFF;
				}else{
					framePointer0[row*640 + col] = 0x00000000;
				}
			}else{
				 framePointer0[row*640 + col] = 0x00000000;
			}
		}
	}
	while(1){}
	cleanup_platform();

	return 0;
}
