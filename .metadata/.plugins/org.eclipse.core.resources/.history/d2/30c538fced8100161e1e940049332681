


int findPixelValue(int x, int y, int col, int row, int *sprite){
	int xval = col - x;
	int yval = row - y;

	//check to make sure we haven't gone out of bounds
//	if(yval >= size){
//		return -1;
//	}

	return (sprite[yval] << xval) & 0x80000000;

}

#define ALIEN_SPRITE_HEIGHT 16

struct AlienSprite {
	int width;
	int sprite[ALIEN_SPRITE_HEIGHT];
}
;
